<assembly>

    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>

    <!-- include assembly files -->
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>

        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3:fabric3-binding-file-api</include>
                <include>org.codehaus.fabric3:fabric3-binding-file</include>
            </includes>
            <outputDirectory>/extensions</outputDirectory>
        </dependencySet>
    </dependencySets>

</assembly>

