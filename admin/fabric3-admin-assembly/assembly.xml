<assembly>

    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <!-- include assembly files -->
    <fileSets>
        <fileSet>
            <directory>src/main</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>

        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3:fabric3-admin-cli</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <outputFileNameMapping>f3.jar</outputFileNameMapping>
            <fileMode>0755</fileMode>
        </dependencySet>

        <!-- copy dependencies to the lib directory -->
        <dependencySet>
            <includes>
                <include>org.codehaus.fabric3:fabric3-admin-api</include>
                <include>org.codehaus.fabric3:fabric3-admin-impl</include>
                <include>org.codehaus.fabric3:fabric3-admin-interpreter</include>
                <include>org.codehaus.fabric3:fabric3-admin-api</include>
                <include>org.codehaus.fabric3:fabric3-management-api</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>


    </dependencySets>

</assembly>

