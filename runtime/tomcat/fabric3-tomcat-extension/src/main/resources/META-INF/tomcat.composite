<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           targetNamespace="urn:fabric3.org:tomcat"
           name="TomcatExtensionComposite"
           autowire="true">


    <component name="ConnectorService">
        <f3-impl:implementation.system class="org.fabric3.runtime.tomcat.connector.ConnectorServiceImpl"/>
        <property name="httpPort" source="$systemConfig//tomcat/@httpPort"/>
    </component>

    <component name="TomcatServletHost">
        <f3-impl:implementation.system class="org.fabric3.runtime.tomcat.servlet.TomcatServletHost"/>
        <property name="httpPort" source="$systemConfig//tomcat/@httpPort"/>
    </component>

    <component name="TomcatWebApplicationActivator">
        <f3-impl:implementation.system class="org.fabric3.runtime.tomcat.activator.TomcatWebApplicationActivator"/>
    </component>

    <component name="TomcatAuthenticationService">
        <f3-impl:implementation.system class="org.fabric3.runtime.tomcat.security.TomcatAuthenticationService"/>
    </component>

    <component name="TomcatAuthorizationService">
        <f3-impl:implementation.system class="org.fabric3.runtime.tomcat.security.TomcatAuthorizationService"/>
    </component>

</composite>
