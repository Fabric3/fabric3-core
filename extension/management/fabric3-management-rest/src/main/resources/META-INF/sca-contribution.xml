<contribution xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
              xmlns:f3="urn:fabric3.org"
              f3:extension="true"
              f3:description="REST management extension">
    <f3:requires.capability name="json" loaded="true"/>
    <f3:provides.capability name="management"/>
    <import.java package="org.fabric3.spi.*" version="2.0.0"/>
    <import.java package="com.fasterxml.jackson.*" version="2.2.0"/>

    <export.java package="org.fabric3.management.rest.spi" version="2.0.0"/>
    <export.java package="org.fabric3.management.rest.model" version="2.0.0"/>

    <deployable composite="f3:ManagementExtension"/>
    <deployable composite="f3:ManagementControllerExtension" modes="controller vm"/>

</contribution>