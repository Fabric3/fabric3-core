<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           targetNamespace="urn:fabric3.org:jpa"
           name="HibernateJpaExtension"
           autowire="true">

    <component name="DefaultEmfCache">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.emf.DefaultEmfCache"/>
    </component>

    <component name="F3TransactionManagerLookup">
        <f3-impl:implementation.system class="org.fabric3.jpa.api.F3TransactionManagerLookup"/>
    </component>

    <component name="HibernateContributionListener">
        <f3-impl:implementation.system class="org.fabric3.jpa.contribution.HibernateContributionListener"/>
    </component>

    <component name="PersistenceUnitProcessor" f3-core:key="javax.persistence.PersistenceUnit">
        <f3-impl:implementation.system class="org.fabric3.jpa.introspection.PersistenceUnitProcessor"/>
    </component>

    <component name="PersistenceContextProcessor" f3-core:key="javax.persistence.PersistenceContext">
        <f3-impl:implementation.system class="org.fabric3.jpa.introspection.PersistenceContextProcessor"/>
    </component>

    <component name="SessionResourceGenerator" f3-core:key="org.fabric3.jpa.model.HibernateSessionResource">
        <f3-impl:implementation.system class="org.fabric3.jpa.generator.SessionResourceGenerator"/>
    </component>

    <component name="PersistenceUnitResourceWireGenerator" f3-core:key="org.fabric3.jpa.model.PersistenceUnitResource">
        <f3-impl:implementation.system class="org.fabric3.jpa.generator.PersistenceUnitResourceGenerator"/>
    </component>

    <component name="PersistenceContextResourceWireGenerator" f3-core:key="org.fabric3.jpa.model.PersistenceContextResource">
        <f3-impl:implementation.system class="org.fabric3.jpa.generator.PersistenceContextResourceGenerator"/>
    </component>

    <component name="PersistenceUnitWireAttacher" f3-core:key="org.fabric3.jpa.provision.PersistenceUnitTargetDefinition">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.PersistenceUnitWireAttacher"/>
    </component>

    <component name="PersistenceContextWireAttacher" f3-core:key="org.fabric3.jpa.provision.PersistenceContextTargetDefinition">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.PersistenceContextWireAttacher"/>
    </component>

    <component name="SessionWireAttacher" f3-core:key="org.fabric3.jpa.provision.SessionTargetDefinition">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.SessionWireAttacher"/>
    </component>

    <component name="PersistenceContextParser">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.emf.PersistenceContextParserImpl"/>
    </component>

    <component name="CachingEmfResolver">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.emf.CachingEmfResolver"/>
        <property name="monitorLevel" source="$systemConfig//jpa/@logging"/>
    </component>

    <component name="EntityManagerService">
        <f3-impl:implementation.system class="org.fabric3.jpa.runtime.proxy.EntityManagerServiceImpl"/>
    </component>

</composite>