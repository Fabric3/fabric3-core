<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3="urn:fabric3.org"
           targetNamespace="urn:fabric3.org"
           name="InfinispanParticipantExtension"
           autowire="true">

    <!--
        Create and start default infinispan cache manager.
    -->
    <component name="InfinispanCacheManager" f3:key="org.fabric3.cache.infinispan.provision.InfinispanConfiguration">
        <f3:implementation.system class="org.fabric3.cache.infinispan.runtime.InfinispanCacheManager"/>
    </component>

    <!--
        Create specific cache using infinispan configuration.
    -->
    <component name="InfinispanCacheManager"
               f3:key="org.fabric3.cache.infinispan.provision.InfinispanPhysicalResourceDefinition">
        <f3:implementation.system class="org.fabric3.cache.infinispan.runtime.InfinispanResourceBuilder"/>
    </component>

    <component name="DataSourceWireAttacher" f3:key="org.fabric3.datasource.provision.DataSourceTargetDefinition">
        <f3:implementation.system class="org.fabric3.datasource.runtime.DataSourceWireAttacher"/>
    </component>

</composite>