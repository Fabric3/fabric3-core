<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3="urn:fabric3.org"
           targetNamespace="urn:fabric3.org"
           name="InfinispanControllerExtension"
           autowire="true">

    <!--
        Make physical resource from logical resource.
    -->
    <component name="InfinispanResourceGenerator" f3:key="org.fabric3.cache.infinispan.model.InfinispanResourceDefinition">
        <f3:implementation.system class="org.fabric3.cache.infinispan.generator.InfinispanResourceGenerator"/>
    </component>

    <!--
        Load configuration from composite file.
    -->
    <component name="InfinispanTypeLoader" f3:key="f3:caches">
        <f3:implementation.system class="org.fabric3.cache.infinispan.introspection.InfinispanTypeLoader"/>
    </component>

    <component name="InfinispanResourceTypeHandler">
        <f3:implementation.system class="org.fabric3.cache.infinispan.introspection.InfinispanResourceTypeHandler"/>
    </component>




    <component name="DataSourceTypeHandler" f3:key="javax.sql.DataSource">
        <f3:implementation.system class="org.fabric3.datasource.introspection.DataSourceTypeHandler"/>
    </component>

    <component name="JSR250DataSourceTypeHandler" f3:key="javax.sql.DataSource">
        <f3:implementation.system class="org.fabric3.datasource.introspection.JSR250DataSourceTypeHandler"/>
    </component>

    <component name="DataSourceGenerator" f3:key="org.fabric3.datasource.model.DataSourceResourceReference">
        <f3:implementation.system class="org.fabric3.datasource.generator.DataSourceResourceReferenceGenerator"/>
    </component>

    <component name="DataSourceResourceGenerator" f3:key="org.fabric3.datasource.model.DataSourceResource">
        <f3:implementation.system class="org.fabric3.datasource.generator.DataSourceResourceGenerator"/>
    </component>

</composite>
