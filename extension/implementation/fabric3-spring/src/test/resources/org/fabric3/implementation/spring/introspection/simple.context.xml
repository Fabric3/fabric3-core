<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <sca:service name="TestService" type="java.lang.Object" target="Service1"/>
    <bean name="Service1"
          class="org.fabric3.implementation.spring.introspection.Service1">
        <property name="service" ref="Service2"/>
    </bean>

    <bean name="Service2" class="org.fabric3.implementation.spring.introspection.Service2">
        <property name="property1" value="test"/>
    </bean>

    <sca:reference name="TestReference" type="java.lang.Object"/>
</beans>