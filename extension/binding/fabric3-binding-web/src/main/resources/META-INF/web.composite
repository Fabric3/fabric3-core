<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3-core="urn:fabric3.org:core"
           xmlns:f3-impl="urn:fabric3.org:implementation"
           xmlns:f3-binding="urn:org.fabric3:binding"
           targetNamespace="urn:fabric3.org:implementation"
           name="WebBindingExtension"
           autowire="true">

    <component name="WebConnectionBindingGenerator" f3-core:key="org.fabric3.binding.web.model.WebBindingDefinition">
        <f3-impl:implementation.system class="org.fabric3.binding.web.generator.WebConnectionBindingGenerator"/>
    </component>

    <component name="WebBindingLoader" f3-core:key="f3-binding:binding.web">
        <f3-impl:implementation.system class="org.fabric3.binding.web.loader.WebBindingLoader"/>
    </component>

    <component name="BroadcasterManager">
        <f3-impl:implementation.system class="org.fabric3.binding.web.runtime.BroadcasterManagerImpl"/>
    </component>

    <component name="WebConnectionSourceDefinition" f3-core:key="org.fabric3.binding.web.provision.WebConnectionSourceDefinition">
        <f3-impl:implementation.system class="org.fabric3.binding.web.runtime.AtmosphereSourceConnectionAttacher"/>
    </component>


</composite>
