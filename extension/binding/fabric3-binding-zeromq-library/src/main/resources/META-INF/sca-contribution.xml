<contribution xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
              xmlns:f3="urn:fabric3.org"
              f3:extension="true"
              f3:description="ZeroMQ library extension">

    <export.java package="org.zeromq" version="2.1.0"/>

    <f3:provides.capability name="zeromq"/>

    <f3:library path='META-INF/native/libzmq.0.dylib'>
        <os name='Mac OS X' version="10.6.6" processor='x86'/>
    </f3:library>

    <f3:library path='META-INF/native/libjzmq.dylib'>
        <os name='Mac OS X' version="10.6.6" processor='x86'/>
    </f3:library>
    
    <f3:library path='META-INF/native/libzmq.dll'>
        <os name='Windows'/>
    </f3:library>

    <f3:library path='META-INF/native/jzmq.dll'>
        <os name='Windows'/>
    </f3:library>
    
    <f3:library path="META-INF/native/libzmq.so">
    	<os name="Linux" min="2.6" processor="x86"/>
    </f3:library>

    <f3:library path="META-INF/native/libjzmq.so">
    	<os name="Linux" min="2.6" processor="x86"/>
    </f3:library>
    <f3:library path="META-INF/native/x86_64/linux/libzmq.so">
    	<os name="Linux" min="2.6" processor="x86-64"/>
    </f3:library>
    <f3:library path="META-INF/native/x86_64/linux/libjzmq.so">
    	<os name="Linux" min="2.6" processor="x86-64"/>
    </f3:library>
</contribution>
