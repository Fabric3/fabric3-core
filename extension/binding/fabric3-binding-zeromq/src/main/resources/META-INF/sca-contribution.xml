<contribution xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
              xmlns:f3="urn:fabric3.org"
              f3:extension="true"
              f3:description="ZeroMQ binding extension">
    <import.java package="org.fabric3.spi.*"/>
    <import.java package="org.zeromq" version="2.1.0"/>

    <f3:provides.capability name="zeromq"/>

    <deployable composite="f3:ZeroMQControllerExtension" modes="controller vm"/>
    <deployable composite="f3:ZeroMQRuntimeExtension" modes="participant vm"/>
    <deployable composite="f3:ZeroMQVMExtension" modes="vm"/>
    <deployable composite="f3:ZeroMQParticipantExtension" modes="participant"/>

</contribution>