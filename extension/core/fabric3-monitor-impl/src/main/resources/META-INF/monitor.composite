<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3="urn:fabric3.org"
           targetNamespace="urn:fabric3.org"
           name="MonitorImplementationExtension"
           autowire="true">


    <component name="RingBufferDestinationRouter">
        <f3:implementation.system class="org.fabric3.monitor.impl.router.RingBufferDestinationRouterImpl"/>
        <property name="mode" source="$systemConfig/f3:monitor/@mode"/>
        <property name="capacity" source="$systemConfig/f3:monitor/@capacity"/>
        <property name="ringSize" source="$systemConfig/f3:monitor/@ring.size"/>
        <property name="waitStrategy" source="$systemConfig/f3:monitor/@wait.strategy"/>
        <property name="blockingTimeoutNanos" source="$systemConfig/f3:monitor/@blocking.timeout"/>
        <property name="spinTimeoutNanos" source="$systemConfig/f3:monitor/@spin.timeout"/>
        <property name="yieldTimeoutNanos" source="$systemConfig/f3:monitor/@yield.timeout"/>
        <property name="phasedBlockingType" source="$systemConfig/f3:monitor/@phased.blocking.type"/>

        <property name="pattern" source="$systemConfig/f3:monitor/@pattern"/>
        <property name="timeZone" source="$systemConfig/f3:monitor/@time.zone"/>

    </component>

    <component name="MonitorDestinationRegistry">
        <f3:implementation.system class="org.fabric3.monitor.impl.destination.MonitorDestinationRegistryImpl"/>
        <property name="defaultAppenders" source="$systemConfig/f3:monitor/f3:appenders"/>
    </component>

    <component name="AppenderFactoryImpl">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.factory.AppenderFactoryImpl"/>
    </component>

    <component name="SwitchingMonitorProxyServiceExtension">
        <f3:implementation.system class="org.fabric3.monitor.impl.proxy.SwitchingMonitorProxyServiceExtension"/>
        <property name="proxy" source="$systemConfig/f3:monitor/@proxy"/>
        <property name="pattern" source="$systemConfig/f3:monitor/@pattern"/>
        <property name="timeZone" source="$systemConfig/f3:monitor/@time.zone"/>
        <property name="enabled" source="$systemConfig/f3:monitor/@asynchronous"/>
    </component>

    <wire source="DestinationRouter/destination" target="RingBufferDestinationRouter"/>

    <wire source="MonitorProxyService/extension" target="SwitchingMonitorProxyServiceExtension"/>

    <component name="ComponentAppenderLoader">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.component.ComponentAppenderLoader"/>
    </component>

    <component name="ComponentAppenderGenerator" f3:key="org.fabric3.monitor.impl.appender.component.ComponentAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.component.ComponentAppenderGenerator"/>
    </component>

    <component name="ComponentAppenderBuilder" f3:key="org.fabric3.monitor.impl.appender.component.PhysicalComponentAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.component.ComponentAppenderBuilder"/>
    </component>

    <component name="ConsoleAppenderLoader">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.console.ConsoleAppenderLoader"/>
    </component>

    <component name="ConsoleAppenderGenerator" f3:key="org.fabric3.monitor.impl.appender.console.ConsoleAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.console.ConsoleAppenderGenerator"/>
    </component>

    <component name="ConsoleAppenderBuilder" f3:key="org.fabric3.monitor.impl.appender.console.PhysicalConsoleAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.console.ConsoleAppenderBuilder"/>
    </component>

    <component name="FileAppenderLoader">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.file.FileAppenderLoader"/>
    </component>

    <component name="FileAppenderGenerator" f3:key="org.fabric3.monitor.impl.appender.file.FileAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.file.FileAppenderGenerator"/>
    </component>

    <component name="FileAppenderBuilder" f3:key="org.fabric3.monitor.impl.appender.file.PhysicalFileAppenderDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.appender.file.FileAppenderBuilder"/>
    </component>

    <component name="MonitorResourceLoader">
        <f3:implementation.system class="org.fabric3.monitor.impl.introspection.MonitorResourceLoader"/>
    </component>

    <component name="MonitorResourceGenerator" f3:key="org.fabric3.monitor.impl.model.MonitorResourceDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.generator.MonitorResourceGenerator"/>
    </component>

    <component name="MonitorBuilder" f3:key="org.fabric3.monitor.impl.physical.PhysicalMonitorDefinition">
        <f3:implementation.system class="org.fabric3.monitor.impl.builder.MonitorBuilder"/>
    </component>


</composite>